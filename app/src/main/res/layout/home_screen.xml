<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="104dp"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:contentPadding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/bmstu_icon"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uni_name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:fontFamily="@font/daysone"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_header2"
                        android:textColor="@color/colorSecondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/daysone"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Зотов Алексей Олегович"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/daysone"
                        android:layout_marginTop="12dp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:contentPaddingTop="8dp"
            app:contentPaddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state_exam_points"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/cuprum"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider_background"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/exam_scores_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/documents_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:contentPaddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:id="@+id/current_contest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/refresh"
                        android:layout_alignParentStart="true"
                        android:text="@string/current_contest"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/cuprum"/>

                    <TextView
                        android:id="@+id/last_reload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/last_reload"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:fontFamily="@font/cuprum"
                        android:layout_below="@id/current_contest"
                        android:layout_toStartOf="@id/refresh"/>

                    <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="6dp"
                        app:srcCompat="@drawable/ic_refresh"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider_background"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/program1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09.03.04 Программная инженерия"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/cuprum"
                            android:textStyle="italic"
                            android:layout_toStartOf="@id/progress1"
                            android:layout_alignParentStart="true"/>

                        <ProgressBar
                            android:id="@+id/progress1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_toStartOf="@id/ic1"
                            android:layout_marginEnd="6dp"
                            android:indeterminateTint="@color/colorSecondary"/>

                        <TextView
                            android:id="@+id/score1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="265"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/cuprum"
                            android:textStyle="bold"
                            android:layout_toStartOf="@id/ic1"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:id="@+id/ic1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            app:srcCompat="@drawable/download_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/program2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/progress2"
                            android:fontFamily="@font/cuprum"
                            android:text="09.03.03 Прикладная информатика"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                        <ProgressBar
                            android:id="@+id/progress2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_toStartOf="@id/ic2"
                            android:layout_marginEnd="6dp"
                            android:indeterminateTint="@color/colorSecondary"/>

                        <TextView
                            android:id="@+id/score2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="273"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/cuprum"
                            android:textStyle="bold"
                            android:layout_toStartOf="@id/ic2"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:id="@+id/ic2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/download_icon"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/program3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cuprum"
                            android:text="09.03.01 Информатика и вычислительная техника"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:layout_toStartOf="@id/progress3"
                            android:layout_alignParentStart="true"/>

                        <ProgressBar
                            android:id="@+id/progress3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="6dp"
                            android:layout_toStartOf="@id/ic3"
                            android:indeterminateTint="@color/colorSecondary"/>

                        <TextView
                            android:id="@+id/score3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="270"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/cuprum"
                            android:textStyle="bold"
                            android:layout_toStartOf="@id/ic3"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="12dp"/>

                        <ImageView
                            android:id="@+id/ic3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/download_icon"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>