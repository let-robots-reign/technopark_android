<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/catalog_image"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/bmstu"
        android:alpha="0.5"/>

<!-- "фильтр" поверх изображения  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/catalog_image"
        android:layout_alignTop="@id/catalog_image"
        android:layout_alignEnd="@id/catalog_image"
        android:layout_alignBottom="@id/catalog_image"
        android:layout_margin="1dp"
        android:gravity="center"
        android:background="@android:color/black"
        android:alpha="0.3"/>

    <TextView
        android:id="@+id/catalog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/catalog_image"
        android:layout_alignTop="@id/catalog_image"
        android:layout_alignEnd="@id/catalog_image"
        android:layout_alignBottom="@id/catalog_image"
        android:gravity="center"
        tools:text="Hello"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/cuprum"/>

</RelativeLayout>